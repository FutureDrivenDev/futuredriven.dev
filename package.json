{
  "name": "futuredriven.dev",
  "version": "0.0.1",
  "description": "Landing pages and blog for Future Driven.",
  "scripts": {
    "build": "npm run build.server && npm run build.client",
    "build.client": "vite build",
    "build.server": "vite build --outDir server/build --ssr src/entry.server.tsx",
    "dev": "concurrently -n \"vite,deno\" -c \"green,blue\" \"npm run vite\" \"denon start\"",
    "vite": "wait-on tcp:8080 && vite",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "serve": "npm run build && denon start",
    "start": "npm run dev",
    "test": "echo 'soon...'"
  },
  "devDependencies": {
    "@builder.io/qwik": "0.0.16-12",
    "autoprefixer": "10.4.2",
    "concurrently": "^7.0.0",
    "node-fetch": "^2.6.7",
    "postcss": "8.4.6",
    "prettier": "2.3.0",
    "tailwindcss": "3.0.18",
    "typescript": "^4.5.2",
    "vite": "^2.8.1",
    "vite-plugin-full-reload": "^1.0.0",
    "wait-on": "^6.0.1"
  },
  "author": "Guilherme Rodrigues",
  "license": "MIT",
  "engines": {
    "node": ">=16.13.2"
  }
}
